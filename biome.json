{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			"**/node_modules/**",
			"**/dist/**",
			"**/build/**",
			"**/.next/**",
			"**/coverage/**",
			"**/.turbo/**",
			"**/out/**",
			"**/.output/**",
			"**/*.min.js",
			"pnpm-lock.yaml",
			"yarn.lock",
			"package-lock.json"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100,
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noExcessiveCognitiveComplexity": "warn",
				"noVoid": "error",
				"useLiteralKeys": "off",
				"useSimplifiedLogicExpression": "warn"
			},
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"useExhaustiveDependencies": "warn"
			},
			"performance": {
				"noBarrelFile": "off",
				"noReExportAll": "warn"
			},
			"style": {
				"noNegationElse": "warn",
				"useBlockStatements": "error",
				"useCollapsedElseIf": "error",
				"useConsistentArrayType": {
					"level": "error",
					"options": {
						"syntax": "shorthand"
					}
				},
				"useFilenamingConvention": {
					"level": "warn",
					"options": {
						"requireAscii": true,
						"filenameCases": ["kebab-case", "PascalCase", "camelCase"]
					}
				},
				"useForOf": "error",
				"useFragmentSyntax": "error",
				"useNamingConvention": {
					"level": "warn",
					"options": {
						"strictCase": false,
						"conventions": [
							{
								"selector": { "kind": "variable" },
								"formats": ["camelCase", "PascalCase", "CONSTANT_CASE"]
							},
							{
								"selector": { "kind": "function" },
								"formats": ["camelCase", "PascalCase"]
							},
							{
								"selector": { "kind": "typeLike" },
								"formats": ["PascalCase"]
							}
						]
					}
				},
				"useShorthandArrayType": "error",
				"useShorthandAssign": "error",
				"useSingleCaseStatement": "warn",
				"useTemplate": "error"
			},
			"suspicious": {
				"noConsoleLog": "warn",
				"noEmptyBlockStatements": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"trailingCommas": "all",
			"semicolons": "always",
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"bracketSameLine": false,
			"quoteProperties": "asNeeded",
			"attributePosition": "auto"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"overrides": [
		{
			"include": ["*.test.ts", "*.test.tsx", "*.spec.ts", "*.spec.tsx"],
			"linter": {
				"rules": {
					"suspicious": {
						"noConsoleLog": "off"
					}
				}
			}
		}
	]
}
